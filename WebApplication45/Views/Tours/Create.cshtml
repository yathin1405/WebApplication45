@model WebApplication45.Models.Tour

@{
    ViewBag.Title = "Create a tour";
}




@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h2>Tour</h2>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Tour_Type, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(model => model.Tour_Type, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Tour_Type, "", new { @class = "text-danger" })
        </div>
    </div>

