        </div>*@

    <div class="form-group">
        @Html.LabelFor(model => model.Tour_Duration, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Tour_Duration, new SelectListItem[]
          {
          new SelectListItem() { Text="09:00-11:00", Value="9:00:00-11:00:00"},
          new SelectListItem() { Text="11:00-13:00", Value="11:00:00-13:00:00"},
          new SelectListItem() { Text="13:00-15:00", Value="13:00:00-15:00:00"},
          new SelectListItem() { Text="15:00-17:00", Value="15:00:00-17:00:00"},
          }, "Select Time")

        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tour_Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Tour_Date, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Tour_Date, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Tour_Time, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.Tour_Time, new SelectListItem[]
          {
          new SelectListItem() { Text="09:00", Value="9:00:00"},
          new SelectListItem() { Text="11:00", Value="11:00:00"},
          new SelectListItem() { Text="13:00", Value="13:00:00"},
          new SelectListItem() { Text="15:00", Value="15:00:00"},
          }, "Select Time")
            @Html.ValidationMessageFor(model => model.Tour_Time, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

